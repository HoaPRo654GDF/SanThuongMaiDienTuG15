@model SanThuongMaiDienTuG15.Models.Product
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Baithi/Views/Shared/_BaithiLayout.cshtml";
}

@* <form id="deleteForm" method="post" style="display:none;">
